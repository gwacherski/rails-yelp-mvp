<%= form_with(model: @restaurant, local: true) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
    <%= display_validation_error(@restaurant, :name) %>
  </div>

  <div>
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number %>
    <%= display_validation_error(@restaurant, :phone_number) %>
  </div>

  <div>
    <%= form.label :category %>
    <%= form.text_field :category %>
    <%= display_validation_error(@restaurant, :category) %>
  </div>

  <div>
    <%= form.label :address %>
    <%= form.text_field :address %>
    <%= display_validation_error(@restaurant, :address) %>
  </div>

  <div>
    <%= form.submit "Create Restaurant" %>
  </div>
<% end %>
